  int n = ints_get(a);
  int b[1000];
  int m = ints_sums_by_tuple(a, n, x, b);
  ints_println_basic(b, m);
}

void test_problem_C(void)
{
  //double result;
  double a[1000];
  double n = doubles_get(a);
  if (find(a,n) ==-1)
    printf("void\n");
  else
    printf("%d\n", find(a,n));
  
}

void unit_tests(void)
{
  unit_test_problem_A();
  unit_test_problem_B();
  unit_test_problem_C();
}

